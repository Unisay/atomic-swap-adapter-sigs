# EditorConfig for atomic-swap-adapter-sigs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.hs]
indent_style = space
indent_size = 2
max_line_length = 80

[*.cabal]
indent_style = space
indent_size = 2

[*.nix]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
